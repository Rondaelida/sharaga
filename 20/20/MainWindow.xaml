            <TextBlock Style="{DynamicResource TextBlockStyle}" Height="20" Canvas.Left="564" TextWrapping="Wrap" Text="Твой возраст" Canvas.Top="137" Width="77" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <StackPanel>
                <ComboBox Style="{DynamicResource ComboBoxStyle}" x:Name="styleBox" />
                <Button Style="{DynamicResource ButtonStyle}" />
                <TextBlock Text="Windows Presentation Foundation" Style="{DynamicResource TextBlockStyle}" />
            </StackPanel>



        </Canvas>
    </Grid>
</Window>
