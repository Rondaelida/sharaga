            <TextBox Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="285" Height="32" Canvas.Left="180" Canvas.Top="118"/>
